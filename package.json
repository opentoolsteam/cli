{
  "name": "opentools",
  "description": "The easiest way to install MCP servers",
  "version": "0.0.15",
  "author": "OpenTools Team",
  "bin": {
    "opentools": "./bin/run.js"
  },
  "bugs": "https://github.com/opentoolsteam/cli/issues",
  "dependencies": {
    "@inquirer/prompts": "^7.2.1",
    "@oclif/core": "^4",
    "@oclif/plugin-help": "^6",
    "sinon": "^19.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^4",
    "@types/chai": "^4",
    "@types/mocha": "^10",
    "@types/node": "^18",
    "@types/sinon": "^17.0.4",
    "chai": "^4",
    "eslint": "^8",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9",
    "mocha": "^10",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10",
    "typescript": "~5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://opentools.com",
  "keywords": [
    "modelcontextprotocol",
    "mcp",
    "opentools"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "oclif": {
    "bin": "opentools",
    "dirname": "opentools",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "opentoolsteam/cli",
  "scripts": {
    "build": "shx rm -rf dist tsconfig.tsbuildinfo && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "oclif manifest && oclif readme",
    "test": "mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "types": "dist/index.d.ts",
  "exports": {
    "./data/servers": "./dist/data/servers/index.js",
    "./data/types": "./dist/data/types.js"
  }
}
